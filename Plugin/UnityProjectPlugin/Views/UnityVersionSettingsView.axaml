<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:UnityProjectPlugin.Models"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="UnityProjectPlugin.Views.UnityVersionSettingsView">

    <StackPanel Spacing="12" Margin="8,0,0,0">
        <!-- 标题和添加按钮 -->
        <Grid ColumnDefinitions="*,Auto">
            <TextBlock Grid.Column="0" 
                      Text="Unity 版本管理" 
                      FontSize="16" 
                      FontWeight="Bold"
                      VerticalAlignment="Center"/>
            <Button Grid.Column="1" 
                   Content="添加版本"
                   Name="AddVersionButton"
                   Padding="12,6"/>
        </Grid>

        <!-- 版本列表 -->
        <Border BorderThickness="1" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                CornerRadius="4"
                MinHeight="200">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="VersionsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:UnityVersion">
                            <Border BorderThickness="0,0,0,1" 
                                   BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                   Padding="12,8">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- 版本号 -->
                                    <StackPanel Grid.Column="0" 
                                               Spacing="2" 
                                               MinWidth="120"
                                               Margin="0,0,16,0">
                                        <TextBlock Text="版本号" 
                                                  FontSize="11" 
                                                  Opacity="0.6"/>
                                        <TextBlock Text="{Binding Version}" 
                                                  FontSize="13"
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Editor 路径 -->
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="Editor 路径" 
                                                  FontSize="11" 
                                                  Opacity="0.6"/>
                                        <TextBlock Text="{Binding EditorPath}" 
                                                  FontSize="12"
                                                  TextTrimming="CharacterEllipsis"
                                                  ToolTip.Tip="{Binding EditorPath}"/>
                                    </StackPanel>

                                    <!-- 删除按钮 -->
                                    <Button Grid.Column="2" 
                                           Content="删除"
                                           Padding="8,4"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- 提示信息 -->
        <TextBlock Text="提示: Unity Editor 通常位于 C:\Program Files\Unity\Hub\Editor\版本号\Editor\Unity.exe"
                  FontSize="11"
                  Opacity="0.6"
                  TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>

