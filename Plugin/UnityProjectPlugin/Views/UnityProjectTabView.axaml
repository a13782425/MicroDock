<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:UnityProjectPlugin.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="UnityProjectPlugin.Views.UnityProjectTabView">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid ColumnDefinitions="1*,2*" Margin="0,12,12,12">
        <!-- 左侧：项目列表区域 -->
        <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,8,0">
            <!-- 工具栏 -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                <TextBox Grid.Column="0" 
                         Watermark="搜索项目..."
                         Name="SearchTextBox"
                         Margin="0,0,8,0"/>
                <Button Grid.Column="1" 
                        Content="添加项目"
                        Name="AddProjectButton"
                        Padding="12,6"/>
            </Grid>

            <!-- 项目列表 -->
            <Border BorderThickness="1" 
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    CornerRadius="4"
                    MinHeight="400">
                <ListBox Name="ProjectsListBox"
                         SelectionMode="Single"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:UnityProject">
                            <StackPanel Spacing="4" Margin="8,4">
                                <TextBlock Text="{Binding Name}" 
                                          FontWeight="SemiBold"
                                          FontSize="14"/>
                                <TextBlock Text="{Binding Path}" 
                                          FontSize="11"
                                          Opacity="0.7"
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock FontSize="11" Opacity="0.6">
                                    <Run Text="版本: "/>
                                    <Run Text="{Binding UnityVersion, FallbackValue='未知'}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </StackPanel>

        <!-- 右侧：项目详情区域 -->
        <Border Grid.Column="1" 
                BorderThickness="1" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                CornerRadius="4"
                Padding="16">
            <StackPanel Name="DetailsPanel" Spacing="16">
                <!-- 项目信息 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="项目详情" 
                              FontSize="18" 
                              FontWeight="Bold"/>

                    <!-- 项目名称 -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="项目名称" 
                                  FontSize="12" 
                                  Opacity="0.7"/>
                        <TextBlock Name="ProjectNameText"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- 项目路径 -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="项目路径" 
                                  FontSize="12" 
                                  Opacity="0.7"/>
                        <TextBlock Name="ProjectPathText"
                                  FontSize="13"
                                  TextWrapping="Wrap"
                                  Opacity="0.9"/>
                    </StackPanel>

                    <!-- Unity 版本 -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Unity 版本" 
                                  FontSize="12" 
                                  Opacity="0.7"/>
                        <TextBlock Name="ProjectVersionText"
                                  FontSize="13"
                                  Opacity="0.9"/>
                    </StackPanel>

                    <!-- 最后打开时间 -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="最后打开" 
                                  FontSize="12" 
                                  Opacity="0.7"/>
                        <TextBlock Name="LastOpenedText"
                                  FontSize="13"
                                  Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Spacing="8" Orientation="Horizontal">
                    <Button Content="打开项目"
                            Name="OpenProjectButton"
                            Padding="16,8"
                            IsEnabled="False"/>
                    <Button Content="删除项目"
                            Name="DeleteProjectButton"
                            Padding="16,8"
                            IsEnabled="False"/>
                </StackPanel>

                <!-- 空状态提示 -->
                <TextBlock Name="EmptyStateText"
                          Text="请在左侧选择一个项目"
                          FontSize="14"
                          Opacity="0.5"
                          TextAlignment="Center"
                          Margin="0,40,0,0"/>
            </StackPanel>
        </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

