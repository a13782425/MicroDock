<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="TodoListPlugin.Views.FieldTemplateSettingsView">

    <StackPanel Spacing="12">
        <!-- 标题 -->
        <TextBlock Text="自定义字段模板" FontSize="18" FontWeight="SemiBold"/>

        <!-- 添加字段模板区域 -->
        <ui:SettingsExpander Header="添加新字段"
                             IconSource="Add"
                             IsExpanded="False">
            <ui:SettingsExpander.Footer>
                <Button Content="添加"
                        Name="AddFieldButton"
                        Padding="12,6"/>
            </ui:SettingsExpander.Footer>

            <StackPanel Spacing="12" Margin="56,8,48,16">
                <!-- 字段名称 -->
                <TextBox Name="NewFieldNameTextBox"
                         Watermark="字段名称..."
                         MaxLength="30"/>

                <!-- 字段类型 -->
                <StackPanel Spacing="4">
                    <TextBlock Text="字段类型" FontSize="12" Opacity="0.7"/>
                    <ComboBox Name="FieldTypeComboBox"
                              HorizontalAlignment="Stretch"
                              PlaceholderText="选择字段类型...">
                        <ComboBoxItem Content="文本" Tag="Text"/>
                        <ComboBoxItem Content="数字" Tag="Number"/>
                        <ComboBoxItem Content="日期" Tag="Date"/>
                        <ComboBoxItem Content="布尔" Tag="Bool"/>
                        <ComboBoxItem Content="单选项" Tag="Select"/>
                    </ComboBox>
                </StackPanel>

                <!-- Select类型的选项列表 -->
                <StackPanel Name="OptionsPanel" Spacing="4" IsVisible="False">
                    <TextBlock Text="选项列表（每行一个）" FontSize="12" Opacity="0.7"/>
                    <TextBox Name="OptionsTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             MaxHeight="150"
                             Watermark="输入选项，每行一个..."/>
                </StackPanel>

                <!-- 默认值 -->
                <TextBox Name="DefaultValueTextBox"
                         Watermark="默认值（可选）..."/>

                <!-- 是否必填 -->
                <CheckBox Name="RequiredCheckBox"
                          Content="必填字段"/>

                <!-- 是否可筛选 -->
                <CheckBox Name="FilterableCheckBox"
                          Content="支持筛选"
                          IsChecked="True"/>
            </StackPanel>
        </ui:SettingsExpander>

        <!-- 字段模板列表 -->
        <ui:SettingsExpander Header="已有字段"
                             IconSource="List"
                             Description="管理现有字段模板"
                             IsExpanded="True">
            <ScrollViewer MaxHeight="350">
                <ItemsControl Name="FieldsListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid ColumnDefinitions="*,Auto,Auto">
                                    <!-- 字段信息 -->
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Name="FieldNameText"
                                                   Text="{Binding Name}"
                                                   FontWeight="Medium"/>
                                        <WrapPanel>
                                            <!-- 类型标签 -->
                                            <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="10"
                                                    Padding="8,2"
                                                    Margin="0,0,4,0">
                                                <TextBlock Text="{Binding FieldType}"
                                                           FontSize="10"
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- 必填标签 -->
                                            <Border Name="RequiredBadge"
                                                    Background="{DynamicResource SystemFillColorCriticalBrush}"
                                                    CornerRadius="10"
                                                    Padding="8,2"
                                                    Margin="0,0,4,0"
                                                    IsVisible="{Binding Required}">
                                                <TextBlock Text="必填"
                                                           FontSize="10"
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- 可筛选标签 -->
                                            <Border Name="FilterableBadge"
                                                    Background="{DynamicResource SystemFillColorSuccessBrush}"
                                                    CornerRadius="10"
                                                    Padding="8,2"
                                                    IsVisible="{Binding IsFilterable}">
                                                <TextBlock Text="可筛选"
                                                           FontSize="10"
                                                           Foreground="White"/>
                                            </Border>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- 编辑按钮 - 默认字段不显示 -->
                                    <Button Grid.Column="1"
                                            Content="&#xE70F;"
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            Name="EditFieldButton"
                                            Tag="{Binding}"
                                            IsVisible="{Binding !IsDefault}"
                                            Padding="8"
                                            Margin="0,0,4,0"
                                            ToolTip.Tip="编辑"
                                            Click="OnEditFieldClick"/>

                                    <!-- 删除按钮 - 默认字段不显示 -->
                                    <Button Grid.Column="2"
                                            Content="&#xE74D;"
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            Name="DeleteFieldButton"
                                            Tag="{Binding}"
                                            IsVisible="{Binding !IsDefault}"
                                            Padding="8"
                                            ToolTip.Tip="删除"
                                            Click="OnDeleteFieldClick"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </ui:SettingsExpander>
    </StackPanel>
</UserControl>

