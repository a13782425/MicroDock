<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AIChatPlugin.Views.ConversationItem">
    <Border Padding="12" Margin="8,4" CornerRadius="4"
            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            PointerPressed="OnPointerPressed"
            Cursor="Hand">
        <Grid ColumnDefinitions="*,Auto">
            <StackPanel Grid.Column="0" Spacing="4" PointerPressed="OnPointerPressed">
                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"/>
                <TextBlock Text="{Binding UpdatedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                           FontSize="12" Opacity="0.6"/>
                <TextBlock Text="{Binding MessageCount, StringFormat='{}{0} 条消息'}" 
                           FontSize="11" Opacity="0.5"/>
            </StackPanel>
            <Button Grid.Column="1" 
                    Content="删除" 
                    Padding="8,4" 
                    Margin="8,0,0,0"
                    Click="OnDeleteClick"
                    Background="Transparent"
                    BorderThickness="0"/>
        </Grid>
    </Border>
</UserControl>

