<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:RemoteDesktopPlugin.Models"
             xmlns:views="clr-namespace:RemoteDesktopPlugin.Views"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="RemoteDesktopPlugin.Views.RemoteDesktopTabView">

    <Grid RowDefinitions="Auto,*" Margin="0,12,12,12">
        <!-- 工具栏 -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
            <!-- 搜索框 -->
            <TextBox Grid.Column="0"
                     Watermark="搜索连接..."
                     Name="SearchTextBox"
                     Text="{Binding SearchText}"
                     Margin="0,0,12,0"/>

            <!-- 添加连接按钮 -->
            <Button Grid.Column="1"
                    Content="添加连接"
                    Name="AddConnectionButton"
                    Padding="16,8"/>
        </Grid>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <!-- 连接列表 -->
                <ItemsControl Name="ConnectionsList"
                              ItemsSource="{Binding FilteredConnections}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:RemoteConnection">
                            <views:ConnectionCard DataContext="{Binding}" Margin="0,0,8,8" Width="350"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 空状态提示 -->
                <StackPanel Name="EmptyState"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="16"
                            IsVisible="{Binding FilteredConnections.Count, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}">
                    <Viewbox Width="96" Height="96" Opacity="0.3">
                        <Canvas Width="24" Height="24">
                            <Path Fill="{DynamicResource TextFillColorSecondaryBrush}"
                                  Data="M 3,5 C 3,3.9 3.9,3 5,3 L 14,3 C 15.1,3 16,3.9 16,5 L 16,8 C 16,9.1 15.1,10 14,10 L 5,10 C 3.9,10 3,9.1 3,8 Z M 3,12 C 3,10.9 3.9,10 5,10 L 14,10 C 15.1,10 16,10.9 16,12 L 16,15 C 16,16.1 15.1,17 14,17 L 5,17 C 3.9,17 3,16.1 3,15 Z M 5,19 C 3.9,19 3,19.9 3,21 C 3,22.1 3.9,23 5,23 L 8,23 C 9.1,23 10,22.1 10,21 C 10,19.9 9.1,19 8,19 Z"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="还没有添加远程连接"
                               FontSize="16"
                               Opacity="0.6"
                               HorizontalAlignment="Center"/>
                    <Button Content="添加第一个连接"
                            Name="EmptyAddButton"
                            HorizontalAlignment="Center"
                            Padding="16,8"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
