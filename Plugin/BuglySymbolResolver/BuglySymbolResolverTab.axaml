<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="600"
    x:Class="BuglySymbolResolver.BuglySymbolResolverTab">
    
    <!-- 根据插件开发指南，不使用最外层 ScrollViewer -->
    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="0,8,8,8">
        
        <!-- 输入区域 - 紧凑卡片 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <Grid RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0"
                           Text="崩溃/ANR信息" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox Grid.Row="1"
                         x:Name="InputTextBox"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"
                         MinHeight="80"
                         MaxHeight="120"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Watermark="请粘贴崩溃或ANR信息..."/>
            </Grid>
        </Border>
        
        <!-- 配置区域 - 紧凑卡片 -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                <!-- 架构选择 - 横向紧凑布局 -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="架构" 
                           FontSize="12" 
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                          x:Name="ArchitectureComboBox"
                          SelectedIndex="0"
                          MinWidth="120"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="自动"/>
                    <ComboBoxItem Content="32位"/>
                    <ComboBoxItem Content="64位"/>
                </ComboBox>
                
                <!-- 符号文件夹路径 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="符号文件夹" 
                           FontSize="12" 
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Margin="0,8,8,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="SymbolPathTextBox"
                         Watermark="请选择符号文件夹..."
                         VerticalAlignment="Center"
                         Margin="0,8,8,0"
                         IsReadOnly="True"/>
                <Button Grid.Row="1" Grid.Column="2"
                        x:Name="SymbolPathButton"
                        Content="浏览"
                        Padding="12,4"
                        VerticalAlignment="Center"
                        Margin="0,8,0,0"
                        Click="SymbolPathButton_Click"/>
                
                <!-- 符号文件信息展示 -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                        x:Name="SymbolInfoBorder"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="6"
                        Margin="0,8,0,0"
                        IsVisible="False">
                    <StackPanel Spacing="4">
                        <TextBlock FontSize="11" 
                                   FontWeight="SemiBold"
                                   Text="符号文件扫描结果"/>
                        <Grid ColumnDefinitions="Auto,Auto,20,Auto,Auto,20,Auto,Auto">
                            <TextBlock Grid.Column="0" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Text="32位:"/>
                            <TextBlock Grid.Column="1" 
                                       x:Name="Symbol32CountText"
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Margin="4,0,0,0"
                                       Text="0"/>
                            <TextBlock Grid.Column="3" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Text="64位:"/>
                            <TextBlock Grid.Column="4" 
                                       x:Name="Symbol64CountText"
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Margin="4,0,0,0"
                                       Text="0"/>
                            <TextBlock Grid.Column="6" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Text="总计:"/>
                            <TextBlock Grid.Column="7" 
                                       x:Name="SymbolTotalCountText"
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Margin="4,0,0,0"
                                       Text="0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- 输出区域 - 占据剩余空间 -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                           Text="解析结果" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                
                <!-- 解析结果列表 -->
                <Grid Grid.Row="1">
                    <ScrollViewer x:Name="ResultScrollViewer"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                        <ItemsControl ItemsSource="{Binding ParseResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="6,4" 
                                            BorderThickness="0,0,0,1"
                                            BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}">
                                        <Grid ColumnDefinitions="Auto,Auto,*">
                                            <!-- 堆栈序号 -->
                                            <SelectableTextBlock Grid.Column="0" 
                                                                 Text="{Binding Index}"
                                                                 FontFamily="Consolas"
                                                                 FontSize="11"
                                                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                 VerticalAlignment="Top"
                                                                 MinWidth="40"
                                                                 Margin="0,0,8,0"/>
                                            
                                            <!-- 状态图标 -->
                                            <SelectableTextBlock Grid.Column="1" 
                                                                 Text="{Binding StatusIcon}"
                                                                 FontSize="12"
                                                                 FontWeight="Bold"
                                                                 Foreground="{Binding StatusColor}"
                                                                 VerticalAlignment="Top"
                                                                 MinWidth="24"
                                                                 Margin="0,0,8,0"/>
                                            
                                            <!-- 解析结果文本 -->
                                            <SelectableTextBlock Grid.Column="2" 
                                                                 Text="{Binding ResultText}"
                                                                 FontFamily="Consolas"
                                                                 FontSize="11"
                                                                 TextWrapping="Wrap"
                                                                 VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- 空结果提示 -->
                    <TextBlock Text="暂无解析结果"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="13"
                               IsVisible="{Binding !ParseResults.Count}"/>
                </Grid>
            </Grid>
        </Border>
        
        <!-- 操作按钮 - 紧凑布局 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,8"
                    Spacing="8">
            <Button x:Name="ParseButton"
                    Content="解析"
                    Padding="16,6"
                    Click="ParseButton_Click"/>
            <Button x:Name="ClearButton"
                    Content="清空"
                    Padding="16,6"
                    Click="ClearButton_Click"/>
        </StackPanel>
        
        <!-- 状态栏 - 紧凑 -->
        <Border Grid.Row="4"
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <TextBlock x:Name="StatusTextBlock"
                       Text="就绪"
                       FontSize="11"
                       Foreground="Gray"/>
        </Border>
    </Grid>
</UserControl>

