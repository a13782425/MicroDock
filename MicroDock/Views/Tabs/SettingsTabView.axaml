<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MicroDock.ViewModels"
             xmlns:db="using:MicroDock.Database"
             xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="350"
             x:Class="MicroDock.Views.SettingsTabView"
             x:DataType="vm:SettingsTabViewModel">
    <Design.DataContext>
		<vm:SettingsTabViewModel />
	</Design.DataContext>
    <UserControl.Styles>
        
    </UserControl.Styles>
    <!-- 添加滚动视图 -->
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto" VerticalSnapPointsType="None">
        <ScrollViewer.Styles>
            <Style Selector="ScrollBar">
                <Setter Property="IsHitTestVisible" Value="False"/>
            </Style>
        </ScrollViewer.Styles>
        <StackPanel Margin="0,12,12,12" Spacing="8">
            <!-- 基础设置分组 -->
            <fa:SettingsExpander Header="基础设置" 
                                 IconSource="Setting"
                                 IsExpanded="False">
                <StackPanel Margin="10,10,10,10">
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="开机自启动" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>
                        <ToggleSwitch IsChecked="{Binding AutoStartup, Mode=TwoWay}"
                                      Grid.Column="1"
                                      OnContent=""
                                      OffContent=""/>
                    </Grid>
                    
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="靠边隐藏" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>
                        <ToggleSwitch IsChecked="{Binding AutoHide, Mode=TwoWay}"
                                      Grid.Column="1"
                                      OnContent=""
                                      OffContent=""/>
                    </Grid>
                    
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="窗口置顶" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>
                        <ToggleSwitch IsChecked="{Binding AlwaysOnTop, Mode=TwoWay}"
                                      Grid.Column="1"
                                      OnContent=""
                                      OffContent=""/>
                    </Grid>
                    
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="迷你模式" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>
                        <ToggleSwitch IsChecked="{Binding IsMiniModeEnabled, Mode=TwoWay}"
                                      Grid.Column="1"
                                      OnContent=""
                                      OffContent=""/>
                    </Grid>
                    
                    <!-- 主题设置 -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="主题设置" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>
                        <ColorPicker Grid.Column="1" 
                                     Color="{Binding CustomAccentColor}"
                                     Palette="{Binding PredefinedColors}"
                                     IsColorPreviewVisible ="False">
                            <ColorPicker.Styles>
                                <Style Selector="FlyoutPresenter">
                                    <Setter Property="RenderTransform">
                                        <!-- 在这里应用缩放变换 -->
                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                    </Setter>
                                </Style>
                            </ColorPicker.Styles>
                        </ColorPicker>
                    </Grid>
                </StackPanel>
            </fa:SettingsExpander>

            <!-- 迷你模式设置 -->
            <fa:SettingsExpander Header="迷你模式设置"
                                 IconSource="Emoji">
                <StackPanel Margin="10,10,0,10" Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="长按触发(ms)" VerticalAlignment="Center"/>
                        <Slider Grid.Column="1" Minimum="200" Maximum="1500" TickFrequency="50" IsSnapToTickEnabled="True" Value="{Binding LongPressMs, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="半径" VerticalAlignment="Center"/>
                        <Slider Grid.Column="1" Minimum="40" Maximum="140" TickFrequency="5" IsSnapToTickEnabled="True" Value="{Binding MiniRadius, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="项大小" VerticalAlignment="Center"/>
                        <Slider Grid.Column="1" Minimum="24" Maximum="80" TickFrequency="2" IsSnapToTickEnabled="True" Value="{Binding MiniItemSize, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="起始角度" VerticalAlignment="Center"/>
                        <Slider Grid.Column="1" Minimum="-180" Maximum="180" TickFrequency="5" IsSnapToTickEnabled="True" Value="{Binding MiniStartAngle, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="扫过角度" VerticalAlignment="Center"/>
                        <Slider Grid.Column="1" Minimum="60" Maximum="360" TickFrequency="10" IsSnapToTickEnabled="True" Value="{Binding MiniSweepAngle, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="自动半环（靠边）" VerticalAlignment="Center"/>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding MiniAutoDynamicArc, Mode=TwoWay}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="触发后自动收起" VerticalAlignment="Center"/>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding MiniAutoCollapseAfterTrigger, Mode=TwoWay}"/>
                    </Grid>
                    <StackPanel Margin="10,10,0,10">
                        <Button Content="+ 添加应用"
                            Command="{Binding AddApplicationCommand}"
                            HorizontalAlignment="Left"/>
                    
                        <ListBox x:Name="AppsList" ItemsSource="{Binding Applications}" Margin="0,10,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="db:ApplicationDB">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" 
                                                Content="删除" 
                                                Command="{Binding #AppsList.DataContext.RemoveApplicationCommand}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </fa:SettingsExpander>

            <!-- 页签管理分组 -->
            <fa:SettingsExpander Header="页签管理" 
                                 IconSource="Library">
                <StackPanel Margin="10,10,0,10">
                    <TextBlock Text="自定义页签" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"
                               Foreground="#666"/>
                    <Button Content="+ 添加自定义页签"
                            Click="AddCustomTab_OnClick"
                            HorizontalAlignment="Left"/>
                    <TextBlock Text="您可以添加自定义页签来扩展功能" 
                               Foreground="Gray"
                               FontSize="11"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </fa:SettingsExpander>
            
            <!-- 插件设置分组 -->
            <fa:SettingsExpander Header="插件设置" 
                                 IconSource="ViewAll">
                <StackPanel Margin="0,4,0,4" Spacing="12">
                    <!-- 插件设置列表 -->
                    <ItemsControl ItemsSource="{Binding PluginSettings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <fa:SettingsExpander Header="{Binding PluginName}"
                                                     Margin="0,0,0,8">
                                    <StackPanel Margin="0" Spacing="8">
                                        <!-- 插件设置UI或提示信息 -->
                                        <ContentControl Content="{Binding SettingsControl}"
                                                        IsVisible="{Binding HasSettings}"/>
                                        
                                        <!-- 如果没有设置，显示提示 -->
                                        <TextBlock Text="该插件没有设置项" 
                                                   Foreground="Gray"
                                                   FontSize="12"
                                                   Margin="8,0,0,0"
                                                   IsVisible="{Binding !HasSettings}"/>
                                    </StackPanel>
                                </fa:SettingsExpander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- 如果没有插件 -->
                    <TextBlock Text="当前没有加载任何插件" 
                               Foreground="Gray"
                               FontSize="12"
                               Margin="0,8,0,0"
                               IsVisible="{Binding !PluginSettings.Count}"/>
                </StackPanel>
            </fa:SettingsExpander>
            
            <!-- 高级设置分组 -->
            <fa:SettingsExpander Header="高级设置" 
                                 IconSource="Code">
                <StackPanel Margin="10,10,0,10">
                    <TextBlock Text="性能优化" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"
                               Foreground="#666"/>
                    <TextBlock Text="高级配置功能待实现..." 
                               Foreground="Gray"
                               FontSize="12"
                               Margin="0,4"/>
                    
                    <TextBlock Text="调试选项" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Margin="0,15,0,8"
                               Foreground="#666"/>
                    <TextBlock Text="调试工具待实现..." 
                               Foreground="Gray"
                               FontSize="12"
                               Margin="0,4"/>
                </StackPanel>
            </fa:SettingsExpander>
           
            <!-- 关于信息 -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Stretch">
                <StackPanel Spacing="4">
                    <TextBlock Text="关于 MicroDock" 
                               FontSize="14" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="版本: 0.0.1.0" 
                               FontSize="12" 
                               Opacity="0.7"/>
                    <TextBlock Text="轻量级桌面工具栏应用" 
                               FontSize="12" 
                               Opacity="0.7"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

