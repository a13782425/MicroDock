<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MicroDock.Views.Dialog"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="MicroDock.Views.Dialog.BackupListDialog">
    <UserControl.Resources>
        <!-- 备份列表项模板 -->
        <DataTemplate x:Key="BackupItemTemplate" x:DataType="local:BackupListItem">
            <Border Padding="10,8" Margin="2" CornerRadius="6" Background="Transparent">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0" Spacing="2">
                        <!-- 显示名称 -->
                        <TextBlock Text="{Binding DisplayName}" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>
                        <!-- 创建时间和文件大小 -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="{Binding FormattedCreatedAt, StringFormat='创建时间: {0}'}" 
                                       FontSize="11" 
                                       Opacity="0.6"/>
                            <TextBlock Text="{Binding FormattedFileSize, StringFormat='大小: {0}'}" 
                                       FontSize="11" 
                                       Opacity="0.6"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <StackPanel Spacing="0" MinWidth="450">
        <!-- 标题文本 -->
        <TextBlock Name="TitleText"
                   Text="找到 0 个备份，选择一个进行操作："
                   FontSize="13"
                   Margin="0,0,0,10"/>
        
        <!-- 备份列表 -->
        <ScrollViewer MaxHeight="350"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ListBox Name="BackupListBox"
                     SelectionMode="Single"
                     ItemTemplate="{StaticResource BackupItemTemplate}"/>
        </ScrollViewer>
        
        <!-- 删除按钮 -->
        <Button Name="DeleteButton"
                Content="删除选中"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>
