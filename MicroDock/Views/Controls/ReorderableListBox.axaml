<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:extension="clr-namespace:MicroDock.Extension"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MicroDock.Views.Controls.ReorderableListBox"
             x:Name="Root">
    
    <Grid>
        <ItemsControl Name="PART_ItemsControl" 
                      ItemsSource="{Binding ItemsSource, ElementName=Root}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- Root Border handles the Drag Events -->
                    <!-- Note: We use PointerPressed on the item to start drag, 
                         but capture will be handled by the control logic. -->
                    <Border Background="Transparent"
                            PointerPressed="OnItemPointerPressed"
                            Margin="0,2"
                            CornerRadius="4">
                        
                        <!-- Enable smooth layout transitions when reordering occurs -->
                        <Border.Transitions>
                            <Transitions>
                                <!-- Not all layout changes can be animated automatically by Transitions 
                                     in an ItemsControl without LayoutTransformControl, but standard
                                     RenderTransform or Opacity transitions help.
                                     
                                     Actually, Avalonia 11+ doesn't animate auto-layout position changes 
                                     via standard Transitions on the container itself unless we use 
                                     something like MoveBehavior or specific LayoutTransitions.
                                     
                                     However, adding a default transition here provides a hook for future
                                     enhancements or custom behaviors.
                                -->
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut" />
                            </Transitions>
                        </Border.Transitions>

                        <!-- Layout with Built-in Handle -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Handle at Start -->
                            <Border Grid.Column="0" 
                                    Background="Transparent"
                                    Padding="8,0"
                                    Cursor="SizeAll"
                                    IsVisible="{Binding IsDragHandleAtStart, ElementName=Root}">
                                <TextBlock Text="≡" 
                                           FontSize="16" 
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </Border>

                            <!-- User Content -->
                            <ContentPresenter Grid.Column="1"
                                              Content="{Binding}" 
                                              ContentTemplate="{Binding ItemTemplate, ElementName=Root}"
                                              VerticalAlignment="Center"/>

                            <!-- Handle at End -->
                            <Border Grid.Column="2" 
                                    Background="Transparent"
                                    Padding="8,0"
                                    Cursor="SizeAll"
                                    IsVisible="{Binding !IsDragHandleAtStart, ElementName=Root}">
                                <TextBlock Text="≡" 
                                           FontSize="16" 
                                           VerticalAlignment="Center" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Ghost Overlay Layer -->
        <!-- ZIndex > 0 to be on top -->
        <Canvas Name="PART_DragLayer" IsHitTestVisible="False" ZIndex="100" />
    </Grid>
</UserControl>