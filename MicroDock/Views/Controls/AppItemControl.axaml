<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:db="clr-namespace:MicroDock.Database"
			 xmlns:controls="clr-namespace:MicroDock.Views.Controls"
			 xmlns:extension="clr-namespace:MicroDock.Extension"
			 mc:Ignorable="d" d:DesignWidth="64" d:DesignHeight="64"
			 x:Class="MicroDock.Views.Controls.AppItemControl"
			 x:DataType="db:ApplicationDB"
			 Background="Transparent"
			 >
	<!-- 添加右键菜单 -->
	<UserControl.ContextMenu>
		<ContextMenu>
			<MenuItem x:Name="OpenMenuItem" Header="打开"/>
			<MenuItem x:Name="OpenLocationMenuItem" Header="打开文件位置"/>
			<Separator/>
			<MenuItem x:Name="RenameMenuItem" Header="重命名"/>
			<MenuItem x:Name="DeleteMenuItem" Header="删除"/>
		</ContextMenu>
	</UserControl.ContextMenu>
	<Border Width="72"
			Height="96"
			Background="Transparent"
			Cursor="Hand"
			DoubleTapped="OnDoubleTapped"
			ToolTip.Tip="{Binding Name}">
		<Border.Styles>
			<Style Selector="Border:pointerenter">
				<Setter Property="Background" Value="#20000000"/>
			</Style>
		</Border.Styles>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<Image Source="{Binding ., Converter={x:Static extension:IconConverter.Instance}}"
				   Width="48"
				   Height="48"
				   HorizontalAlignment="Center"/>
			<Panel Width="72" Height="24">
				<TextBlock x:Name="NameTextBlock"
						   Text="{Binding Name}"
						   FontSize="12"
						   TextAlignment="Center"
						   TextWrapping="Wrap"
						   Width="72"
						   Height="24"
						   TextTrimming="CharacterEllipsis"
						   HorizontalAlignment="Center"/>
			<TextBox x:Name="NameTextBox"
					 FontSize="12"
					 Width="72"
					 MinHeight="24"
					 Padding="0"
					 Margin="0"
					 BorderThickness="1"
					 HorizontalAlignment="Center"
					 HorizontalContentAlignment="Center"
					 VerticalContentAlignment="Center"
					 IsVisible="False"/>
			</Panel>
		</StackPanel>
	</Border>
</UserControl>

