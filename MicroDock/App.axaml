<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:faStyle="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="MicroDock.App"
             xmlns:local="using:MicroDock"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <faStyle:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
    </Application.Styles>
</Application>