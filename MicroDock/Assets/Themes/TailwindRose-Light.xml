<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns="http://schemas.microdock.app/themes/v1">
  <Metadata>
    <DisplayName>Rose (浅色)</DisplayName>
    <Category>Tailwind</Category>
    <Description>基于 Tailwind CSS 玫瑰色调色板的浅色主题，温暖明亮，充满热情</Description>
    <Author>MicroDock</Author>
    <Version>1.0.0</Version>
  </Metadata>
  <Appearance>
    <Variant>Light</Variant>
    <AccentColor>#E11D48</AccentColor>
    <ColorResources>
      <AccentColors>
        <Color Key="SystemAccentColor" Value="#E11D48"/>
        <Color Key="SystemAccentColorLight1" Value="#F43F5E"/>
        <Color Key="SystemAccentColorLight2" Value="#FB7185"/>
        <Color Key="SystemAccentColorLight3" Value="#FFE4E6"/>
        <Color Key="SystemAccentColorDark1" Value="#BE123C"/>
        <Color Key="SystemAccentColorDark2" Value="#9F1239"/>
        <Color Key="SystemAccentColorDark3" Value="#881337"/>
      </AccentColors>
      <BackgroundColors>
        <Color Key="SystemFillColorAttentionBrush" Value="#E11D48"/>
        <Color Key="SystemFillColorSuccessBrush" Value="#059669"/>
        <Color Key="SystemFillColorCautionBrush" Value="#D97706"/>
        <Color Key="SystemFillColorCriticalBrush" Value="#DC2626"/>
      </BackgroundColors>
      <StrokeColors>
        <Color Key="ControlStrokeColorDefault" Value="#E2E8F0"/>
        <Color Key="ControlStrokeColorSecondary" Value="#CBD5E1"/>
        <Color Key="ControlStrokeColorTertiary" Value="#94A3B8"/>
      </StrokeColors>
      <TextColors>
        <Color Key="TextFillColorPrimary" Value="#0F172A"/>
        <Color Key="TextFillColorSecondary" Value="#334155"/>
        <Color Key="TextFillColorTertiary" Value="#64748B"/>
      </TextColors>
    </ColorResources>
  </Appearance>
</Theme>

