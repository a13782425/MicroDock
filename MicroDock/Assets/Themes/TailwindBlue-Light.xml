<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns="http://schemas.microdock.app/themes/v1">
  <Metadata>
    <DisplayName>Blue (浅色)</DisplayName>
    <Category>Tailwind</Category>
    <Description>基于 Tailwind CSS 蓝色调色板的浅色主题，清新明亮，适合日间使用</Description>
    <Author>MicroDock</Author>
    <Version>1.0.0</Version>
  </Metadata>
  <Appearance>
    <Variant>Light</Variant>
    <AccentColor>#2563EB</AccentColor>
    <ColorResources>
      <AccentColors>
        <Color Key="SystemAccentColor" Value="#2563EB"/>
        <Color Key="SystemAccentColorLight1" Value="#3B82F6"/>
        <Color Key="SystemAccentColorLight2" Value="#60A5FA"/>
        <Color Key="SystemAccentColorLight3" Value="#DBEAFE"/>
        <Color Key="SystemAccentColorDark1" Value="#1D4ED8"/>
        <Color Key="SystemAccentColorDark2" Value="#1E40AF"/>
        <Color Key="SystemAccentColorDark3" Value="#1E3A8A"/>
      </AccentColors>
      <BackgroundColors>
        <Color Key="SystemFillColorAttentionBrush" Value="#2563EB"/>
        <Color Key="SystemFillColorSuccessBrush" Value="#059669"/>
        <Color Key="SystemFillColorCautionBrush" Value="#D97706"/>
        <Color Key="SystemFillColorCriticalBrush" Value="#DC2626"/>
      </BackgroundColors>
      <StrokeColors>
        <Color Key="ControlStrokeColorDefault" Value="#E2E8F0"/>
        <Color Key="ControlStrokeColorSecondary" Value="#CBD5E1"/>
        <Color Key="ControlStrokeColorTertiary" Value="#94A3B8"/>
      </StrokeColors>
      <TextColors>
        <Color Key="TextFillColorPrimary" Value="#0F172A"/>
        <Color Key="TextFillColorSecondary" Value="#334155"/>
        <Color Key="TextFillColorTertiary" Value="#64748B"/>
      </TextColors>
    </ColorResources>
  </Appearance>
</Theme>

